<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <!-- Navbar Fragment -->
    <fragment android:name="edu.calvin.cs262.climbinglogapp.NavBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        tools:layout="@layout/navbar_view"
        android:id="@+id/fragment2" />

    <!-- Route Name -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/routeNameField"
        android:text="Route Name"
        android:layout_below="@+id/fragment2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- The List -->
    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/routeNameField"

        android:layout_marginBottom="50dp"
        android:layout_marginTop="15dp"/>


    <!-- Notes -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/notesField"
        android:text="Notes"
        android:layout_below="@+id/expandableListView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"/>

    <!-- Submit Button -->
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log It!"
        android:id="@+id/submitButton"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>