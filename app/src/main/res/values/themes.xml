<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- this says that the action bar style is defined down below in the MyActionBar style -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/lightorange</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- the background of the action bar -->
        <item name="android:background">@drawable/mountains</item>
        <!-- this says that the style for the action bar text is defined down below in the MyActionBarTitleText style -->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar TitleText -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <!-- Color of text -->
        <item name="android:textColor">@color/orange</item>
        <!-- make the text bold -->
        <item name="android:textStyle">bold</item>
    </style>
</resources>