<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.calvin.cs262.climbinglogappprototype" >

    <uses-sdk android:minSdkVersion="11"> </uses-sdk>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity> <!-- Main activity that is seen at start-up -->

        <activity android:name=".ClimbLogger"
            android:label="@string/log_label" >  <!-- New activity that starts up on button press -->

            <intent-filter>
                <action android:name="android.intent.action.VIEW" /> <!--Show data -->
                <action android:name="android.intent.action.DATA" /> <!-- Data -->
                <action android:name="android.intent.action.PICK" /> <!-- Pick something -->

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity android:name=".GearList"
            android:label="@string/gear_label" >

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.DATA" />
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>

        </activity>


    </application>

</manifest>
